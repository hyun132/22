<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IIum_Medioz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CommonButtonCardStyle" parent="CardView">
        <item name="android:layout_height">47dp</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="profile_modify_style" parent="CardView">
        <item name="android:layout_height">50dp</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="profile_btn_style" parent="CardView">
        <item name="android:layout_height">45dp</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CommonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/color_common_btn</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="profile_modify_style_second" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/profile_modify</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="CommonButtonStyle_second" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/color_common_btn_second</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="loginButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

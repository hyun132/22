<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IIum_Medioz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CommonButtonCardStyle" parent="CardView">
        <item name="android:layout_height">47dp</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CommonButtonCardStyle_keyword" parent="CardView">
        <item name="android:layout_height">40dp</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="bodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bodyTextSize</item>
        <item name="android:textColor">@color/colorBlackHighEmphasis</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DrawerLayoutTextStyle" parent="Widget.AppCompat.TextView">
        <!-- text size in menu-->
        <item name="android:textSize">@dimen/navigation_menu_text_size</item>
    </style>

    <style name="WeekendText">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/sub_grey_6</item>
    </style>

    <style name="explainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/explainTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="headerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textColor">@color/colorBlackHighEmphasis</item>
        <item name="android:fontFamily">@font/gyeonggititle_bold_title</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.Cancel">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/sub_grey_6</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/sub_grey_2</item>
        <item name="rippleColor">@color/sub_grey_2</item>
    </style>

    <style name="RoundButton.Mint">
        <item name="backgroundTint">@color/main_mint</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PermissionTitle">
        <item name="android:textColor">#495257</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/main_mint</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/main_mint</item>
        <item name="controlBackground">@drawable/ic_search</item>
    </style>



    <style name="RoundButton.Grey">
        <item name="backgroundTint">@color/sub_grey_3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButton">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageButton.size48">
        <item name="android:background">@drawable/ripple_48</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ImageButton.size48.icon20">
        <item name="android:padding">14dp</item>
    </style>

    <style name="BlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_blue_button</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">22dp</item>
    </style>

    <style name="PermissionDescription">
        <item name="android:textColor">#6f747a</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profile_modify_style" parent="CardView">
        <item name="android:layout_height">50dp</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="profile_btn_style" parent="CardView">
        <item name="android:layout_height">45dp</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
    </style>

